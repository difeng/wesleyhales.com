!!! 5 
%html
  %head
    %title
      wesleyhales.com: #{page.title}
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    %meta{'name' => 'viewport', :content => 'width=device-width, initial-scale=1.0'}/
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/global.css?v31', :media=>'screen, print' }
    %link{ :rel=>'alternate',  :type=>'application/atom+xml', :href=>'/blog.atom' } 
    %script{:type => "text/javascript", :src  => "/js/modernizr.js", :defer => "defer"}
            
  %body
    %header
      .header-box{:onclick=>"window.location = 'http://wesleyhales.com'"}
        .logo-bold<
          wesleyhales
          %span><
            \.com
        %nav.console
          %ul#menu
            %li#home
              %a{:href => "/index.html"} Blog
            %li#design
              %a{:href => "/design/?p=design"} Projects
            %li#projects
              %a{:href => "/contact/?p=contact"} Me
    %aside#rightcol
      .shadow-helper
        .left-toolbar
          %section.tags
            %header
              %h2.tags-title
                Upcoming Events
              .book-container
                %a{:href => "http://iloveapis2013.com/", :target => "blank"}
                  %img.float-left{:src => "/images/icons/apigee-conf.PNG"}/
                %a{:href => "https://therichwebexperience.com/conference/fort_lauderdale/2013/12/speakers/wesley_hales", :target => "blank"}
                  %img.float-right{:src => "/images/icons/RWX-CDW_125X125_generic.png"}/
                %a{:href => "http://developer.chrome.com/devsummit", :target => "blank"}
                  %img.marginTop10{:src => "/images/icons/chrome-dev-summit.PNG"}/
          %section.clear.recent-comments
            %header
              #recentcomments.dsq-widget
                %h2.dsq-widget-title 
                  Recent Comments
                %script{:src =>"http://wesleyhales.disqus.com/recent_comments_widget.js?num_items=5&hide_avatars=0&avatar_size=24&excerpt_length=200", :type =>"text/javascript"} 
          %section.tags
            %header 
              %h2.tags-title
                My Book
              .book-container
                %a{:href => "http://www.amazon.com/HTML5-JavaScript-Apps-Wesley-Hales/dp/1449320511/"}
                  %img{:src => "/images/icons/mybook.png"}/
          %section{:class=>'tweets'}
            %header 
              %h2{:class=>'tweets-title'}
                %a{:href => "http://twitter.com/wesleyhales"}
                  %img{:src => "/images/bird_16_blue.png"}/
                  Follow @wesleyhales

    #main
      %div{:id=>'post-container'}
        .article-list
          ~ content
    %br{:class=>'clear'}

    %script{:src => "/js/site.js", :type => "text/javascript", :defer => "defer"}
    %script{:src => "/js/apigee.js", :type => "text/javascript"}
    = google_analytics
    :javascript
      //Apigee account credentials, available in the App Services admin portal
      var client_creds = {
              orgName:'wesleyhales',
              appName:'wesleyhales.com'
          }
      window.onload = function(){
        //Initializes the SDK. Also instantiates Apigee.MonitoringClient
        var dataClient = new Apigee.Client(client_creds);
      }