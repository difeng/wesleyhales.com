%html
  %head
    %title
      wesleyhales.com: #{page.title}
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/global.css', :media=>'screen, print' }
    %link{ :rel=>'alternate',  :type=>'application/atom+xml', :href=>'/blog.atom' } 
            
  %body
    %header
      .header-box
        .logo-bold<
          wesleyhales
          %span><
            \.com
        %nav.console
          %ul.menu
            %li.selected
              %a{:href => "/index.html"} Blog
            %li
              %a{:href => "/projects/index.html"} Projects
            %li
              %a{:href => "/contact/index.html"} Contact
    %aside
      .shadow-helper
        .left-toolbar
          %section{:class=>'tags'}
            %header
              %h1{:class=>'tags-title'}
                Tags
            - for tag in site.posts_tags            
              %span.tag{:class=>"tag-#{tag.group}"}
                %a{:href=>tag.primary_page.url}= tag
          %section{:class=>'tweets'}
            %header    
              %h1{:class=>'tweets-title'}
                %a{:href => "http://twitter.com/wesleyhales"}
                  %img{:src => "//si0.twimg.com/images/dev/cms/intents/bird/bird_blue/bird_16_blue.png"}/ 
                  My Tweets
              #twitter_div
                %ul#twitter_update_list
    #main
      %div{:class=>'post-container rounded-5px'}
        .article-list
          ~ content
    %br{:class=>'clear'}
    
    %script{:type => "text/javascript",
            :src  => "/js/modernizr.js"}
    %script{:src => "//platform.twitter.com/widgets.js", :type => "text/javascript"}
    %script{:src => "http://twitter.com/javascripts/blogger.js", :type => "text/javascript"}
    :javascript
      function twitterCallback3(twitters) {
        var statusHTML = [];
        for (var i=0; i<twitters.length; i++){
          var username = twitters[i].user.screen_name;
          var status = twitters[i].text.replace(/((https?|s?ftp|ssh)\:\/\/[^"\s\<\>]*[^.,;'">\:\s\<\>\)\]\!])/g, function(url) {
            return '<a href="'+url+'">'+url+'</a>';
          }).replace(/\B@([_a-z0-9]+)/ig, function(reply) {
            return  reply.charAt(0)+'<a href="http://twitter.com/'+reply.substring(1)+'">'+reply.substring(1)+'</a>';
          });
          statusHTML.push('<li><div>'+status+'</div><div class="actions"><a href="http://twitter.com/'+username+'/statuses/'+twitters[i].id_str+'">'+relative_time(twitters[i].created_at)+'</a>|<a class="tweet_action tweet_retweet" href="http://twitter.com/intent/retweet?tweet_id='+twitters[i].id_str+'"><img src="//si0.twimg.com/images/dev/cms/intents/icons/retweet.png">retweet</a>|<a class="tweet_action tweet_reply" href="http://twitter.com/intent/tweet?in_reply_to='+twitters[i].id_str+'"><img src="//si0.twimg.com/images/dev/cms/intents/icons/reply.png">reply</a></div></li>');
        }
        document.getElementById('twitter_update_list').innerHTML = statusHTML.join('');
      }
  
    %script{:src => "http://twitter.com/statuses/user_timeline/wesleyhales.json?callback=twitterCallback3&amp;count=2", :type => "text/javascript"}

    = google_analytics
